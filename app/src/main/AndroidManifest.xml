<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.meupedido">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeuPedido">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MeuPedido.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.app.pedidopronto.RegistrationActivity"
            android:label="@string/registration_title"
            android:parentActivityName=".MainActivity"/>
        <activity android:name="com.app.pedidopronto.ArchiveActivity"
            android:label="@string/archived_title"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>